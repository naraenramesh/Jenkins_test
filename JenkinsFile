pipeline {
 agent any

 stages{

  stage('Install Dependencies'){
    steps{
         sh '''
                    curl -o- -L https://yarnpkg.com/install.sh | bash
                    export PATH=$HOME/.yarn/bin:$PATH
                    yarn --version
                    yarn
                    '''
            echo "Yarn installed"
  }
  }
  stage('Run Tests'){
    steps{
    sh "yarn test"
    echo "Test results"
    }
  }
 }
}
